{
  "hosting": [
    {
      "target": "staging",
      "public": "wine-picker-next/out",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        { "source": "/:locale", "destination": "/index.html" },
        { "source": "/:locale/**", "destination": "/index.html" }
      ]
    },
    {
      "target": "production",
      "public": "wine-picker-next/out",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        { "source": "/:locale", "destination": "/index.html" },
        { "source": "/:locale/**", "destination": "/index.html" }
      ]
    }
  ]
} 